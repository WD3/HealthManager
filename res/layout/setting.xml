<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text="设备"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" 
            android:clickable="true"
            android:background="@drawable/preference_item">

            <ImageView
                android:id="@+id/bloodpressure_img"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/bloodpressure_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/bloodpressure_img"
                android:padding="12dp"
                android:text="血压"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/r_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#9F9F9F" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" 
            android:clickable="true"
            android:background="@drawable/preference_item">

            <ImageView
                android:id="@+id/ecg_img"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="5dp"
                android:src="@drawable/ecg_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ecg_img"
                android:padding="12dp"
                android:text="心电"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/r_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#9F9F9F" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:background="@drawable/preference_item" >

            <ImageView
                android:id="@+id/counter_img"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="5dp"
                android:src="@drawable/counter_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/counter_img"
                android:padding="12dp"
                android:text="计步"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/r_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#9F9F9F" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" 
            android:clickable="true"
            android:background="@drawable/preference_item">

            <ImageView
                android:id="@+id/scale_img"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="5dp"
                android:src="@drawable/scale_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/scale_img"
                android:padding="12dp"
                android:text="体重"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/r_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#9F9F9F" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" 
            android:clickable="true"
            android:background="@drawable/preference_item">

            <ImageView
                android:id="@+id/oximeter_img"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="5dp"
                android:src="@drawable/oximeter_icon"
                android:background="@drawable/preference_item" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/oximeter_img"
                android:padding="12dp"
                android:text="血氧"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/r_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:background="@drawable/preference_item" >

            <ImageView
                android:id="@+id/server_img"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="5dp"
                android:src="@drawable/server_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/server_img"
                android:padding="12dp"
                android:text="服务器"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/r_arrow" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>