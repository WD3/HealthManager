<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pku.healthmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pku.healthmanager.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pku.healthmanager.Health"
            android:label="@string/title_activity_health" >
        </activity>
        <activity
            android:name="com.pku.healthmanager.CounterActivity"
            android:label="@string/title_activity_counter" >
        </activity>
        <activity
            android:name="com.pku.healthmanager.ScaleActivity"
            android:label="@string/title_activity_scale" >
        </activity>
        <activity
            android:name="com.pku.healthmanager.OximeterActivity"
            android:label="@string/title_activity_oximeter" >
        </activity>
        <activity
            android:name="com.pku.healthmanager.BloodpressureActivity"
            android:label="@string/title_activity_bloodpressure" >
        </activity>
        <activity
            android:name="com.pku.healthmanager.HealthActivity"
            android:label="@string/title_activity_health" >
        </activity>
        <activity
            android:name="com.pku.healthmanager.EmptyActivity"
            android:label="@string/title_activity_empty" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

</manifest>